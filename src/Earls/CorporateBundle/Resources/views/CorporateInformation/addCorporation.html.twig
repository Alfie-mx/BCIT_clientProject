{% extends "EarlsLeaseBundle::layout.html.twig" %}
{% block body %}
 

    {{ form_start(corporateForm, {'attr': {'id': 'addcorporateForm', 'role': 'form',
                    'class': 'form-horizontal'} }) }}

    
    <div class="row">
    <div class="col-md-6">
        <div class="box border blue">
            <div class="box-title">
                <h4>Corporation Info</h4>
            </div>
            <div class="box-body big">
                {{ form_errors(corporateForm) }}
                
                <div class="form-group">
                    <label class="col-sm-3 control-label">Corporation File No.</label>
                    <div class="col-sm-9">
                        {{ form_widget(corporateForm.corporationinfo.filenumber, {
                        'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-3 control-label">Corporation Name</label>
                    <div class="col-sm-9">
                        {{ form_widget(corporateForm.corporationinfo.corporatename, {'label': 'Corporation Name',
                        'label_attr': {'class': 'control-label'},
                        'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-3 control-label">Resp. Solicitor:</label>
                    <div class="col-sm-9">
                        {{ form_widget(corporateForm.corporationinfo.respsolicitor, {'label': 'Resp Solicitor',
                        'label_attr': {'class': 'control-label'},
                        'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-3 control-label">Use:</label>
                    <div class="col-sm-9">
                        {{ form_widget(corporateForm.corporationinfo.usage, {
                        'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                                
                
                    <table style="width: 100%">
                        <tr>
                        
                        <td style="height: 61px">
                                            
                            <div class="form-group">
                            <label class="col-sm-3 control-label">Jurisdiction:</label>
                            <div class="col-sm-9">
                                {{ form_widget(corporateForm.corporationinfo.provincestateid, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div> 
                            </div>
                            
                        </td>

                        <td style="height: 61px">   
                                        
                            <div class="form-group">
                            <label class="col-sm-4 control-label">Fiscal Year End:</label>
                            <div class="col-sm-8">
                                {{ form_widget(corporateForm.corporationinfo.fiscalyearend, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            </div>
                        
                        </td>
                        
                        </tr>
                        <tr>
                        
                        <td>  
                            <div class="form-group">
                            <label class="col-sm-3 control-label">Reg. No:</label>
                            <div class="col-sm-9">
                                {{ form_widget(corporateForm.corporationinfo.registrationnumber, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            </div>
            
                        </td>

                        <td>
                            <div class="form-group">
                            <label class="col-sm-4 control-label">Reg. Date:</label>
                            <div class="col-sm-6">
                                {{ form_widget(corporateForm.corporationinfo.registrationdate, {
                                'attr': {'form': 'corpinfo'}
                                }) }}
                            </div>
                            </div>

                        </td>
                        
                        </tr>
                        <tr>
                        <td>
                            <div class="form-group">
                            <label class="col-sm-3 control-label">Seal:</label>
                            <div class="col-sm-9">
                                {{ form_widget(corporateForm.corporationinfo.seal, {
                                'attr': {'class': 'checkbox', 'form':'corpinfo'}
                                }) }}
                            </div>
                            </div>

                        </td>

                        <td>
                        
                            <div class="form-group">
                            <label class="col-sm-4 control-label">Location Of Seal:</label>
                            <div class="col-sm-8">
                                {{ form_widget(corporateForm.corporationinfo.locationseal, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            </div>

                        </td>
                        
                        </tr>
                    </table>
   
                <div class="form-group">
                    <label class="col-sm-3 control-label">Capital Structure:</label>
                    <div class="col-sm-9">
                        {{ form_widget(corporateForm.corporationinfo.capitalstructure, {
                        'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-3 control-label">Name Changes:</label>
                    <div class="col-sm-9">
                        {{ form_widget(corporateForm.corporationinfo.namechanges, {
                        'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-3 control-label">Active?</label>
                    <div class="col-sm-9">
                        {{ form_widget(corporateForm.corporationinfo.corpstatus, {
                        'attr': {'class': 'checkbox', 'form':'corpinfo'}
                        }) }}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-3 control-label">Dissolution Date:</label>
                    <div class="col-sm-9">
                        {{ form_widget(corporateForm.corporationinfo.dissolutiondate, {
                        'attr': {'form':'corpinfo'}
                        }) }}
                    </div>
                </div>  
            </div>
        </div>
    </div>
    
    <!-- ********** OFFICE TABLE *********** -->
    
        <div class="col-md-6">
        <div class="box border blue">
            <div class="box-title">
                <h4>Offices</h4>
            </div>
            <div class="box-body big">
            
                <table style="width: 100%">
                    <tr>
                        <td><b>Registered</b></td>
                    </tr>
                    <tr>
                    
                        <td>
                            <div class="form-group">
                            <label class="col-sm-3 control-label">Office:</label>
                            <div class="col-sm-9">
                                {{ form_widget(corporateForm.corporationinfo.registeredofficeid, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                    
                        <td><b>Records</b></td>
                        
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group">
                            <label class="col-sm-3 control-label">Office:</label>
                            <div class="col-sm-9">
                                {{ form_widget(corporateForm.corporationinfo.recordsofficeid, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            </div>
                            </td>
                    </tr>
                </table>
            
            </div>
        </div>
        </div>
        
        
        <!-- ********** JURISDICTION TABLE *********** -->
        
        <div class="col-md-6">
        <div class="box border purple">
            <div class="box-title">
                <h4>Jurisdictions</h4>
            </div>
            <div class="box-body big">
            
                <div class="form-group">
                <label class="col-sm-8 control-label">Extra-Provincial Jurisdictions</label>
                </div>

                <table style="width: 100%">
                    <tr>
                        <td>
                            <div class="form-group">
                            <label class="col-sm-9 control-label">Jurisdiction:</label>
                            <div class="col-sm-10">
                                {{ form_widget(corporateForm.jurisdictioninfo.provincestateid, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div> 
                            </div>

                        </td>
                        <td>
                            <div class="form-group">
                            <label class="col-sm-9 control-label">Date Registered:</label>
                            <div class="col-sm-10">
                                {{ form_widget(corporateForm.jurisdictioninfo.registereddate, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div> 
                            </div>
                            
                        </td>
                        
                        <td>
                            <div class="form-group">
                            <label class="col-sm-9 control-label">Registration No:</label>
                            <div class="col-sm-10">
                                {{ form_widget(corporateForm.jurisdictioninfo.registrationnumber, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div> 
                            </div>

                        </td>   
                    </tr>
                    
                    <tr>
                        <td>
                            <div class="form-group">
                            <div class="col-sm-10">
                                {{ form_widget(corporateForm.corporationinfo.provincestateid, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div> 
                            </div>
                        </td>
                        
                        <td>
                            <div class="form-group">
                            <div class="col-sm-10">
                                {{ form_widget(corporateForm.corporationinfo.registrationdate, {
                                'attr': {'form':'corpinfo'}
                                }) }}
                            </div>
                            </div>
                        </td>
                        
                        <td>
                            <div class="form-group">
                            <div class="col-sm-10">
                                {{ form_widget(corporateForm.corporationinfo.registrationnumber, {
                                'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            </div>
                        </td>
                        
                    </tr>

                </table>
            
            </div>
        </div>
        </div>


        <!-- ********** DIRECTORS TABLE *********** -->
        
        <div class="col-md-6">
        <div class="box border green">
            <div class="box-title">
                <h4>Directors</h4>
            </div>
            <div class="box-body big">
            
                <table style="width: 100%">
                    <tr>
                        <td>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Director:</label>
                                <div class="col-sm-9">
                                    {{ form_widget(corporateForm.corpdirectorinfo.directorid, {
                                    'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                            </div>
                        </td>               

                            <td>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Position:</label>
                                    <div class="col-sm-9">
                                        {{ form_widget(corporateForm.corpdirectorinfo.position, {
                                        'attr': {'class': 'form-control'}
                                        }) }}
                                    </div>
                                </div>
                            </td>
                    </tr>
                    
                </table>
            
            </div>
        </div>
        </div>

         <!-- ********** MEMBERSHIPS TABLE *********** -->

        <div class="col-md-8">
            <div class="box border orange">
                <div class="box-title">
                    <h4>Membership</h4>
                </div>
                
                <div class="box-body big">
            
                <table style="width: 100%">
                    <tr>
                        <td>Sharetype:</td>
                        <td>No Of Shares:</td>
                        <td>Shareholders</td>
                    </tr>
                    <tr>
                        <td>
                            {{ form_widget(corporateForm.membershipinfo.sharetypeid, {
                                'attr': {'class': 'form-control'}
                            }) }}
                               
                        </td>
                        <td>
                            {{ form_widget(corporateForm.membershipinfo.numberofshares, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </td>
                        <td>
                            {{ form_widget(corporateForm.membershipinfo.directorid, {
                                'attr': {'class': 'form-control'}
                            }) }}
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    {{ form_end(corporateForm) }}

{% endblock %}
{% block javascript %}
    <script src="{{ asset('bundles/earlslease/js/select2/select2.min.js') }}"></script>
    <script src="{{ asset('bundles/earlslease/js/uniform/jquery.uniform.min.js') }}"></script>
    <script src="{{ asset('bundles/earlslease/js/bootstrap-wizard/jquery.bootstrap.wizard.min.js') }}"></script>
    <script src="{{ asset('bundles/earlslease/js/jquery-validate/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('bundles/earlslease/js/jquery-validate/additional-methods.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/earlslease/js/bootbox/bootbox.min.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/earlslease/js/jQuery-Cookie/jquery.cookie.min.js') }}"></script>


    <script src="{{ asset('bundles/earlslease/js/bootstrap-wizard/form-wizard.min.js') }}"></script>
    <script>
        jQuery(document).ready(function(){
            App.setPage("wizards_validations");
            App.init();
            FormWizard.init();
        });
    </script>
{% endblock %}